{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [ 
      "eslint:recommended",
      "plugin:react/recommended" ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
      "react": {
        "createClass": "createReactClass", 
        "pragma": "React", 
        "version": "detect", 
        "flowVersion": "0.53" 
      }
    },
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console":"off"
    }
}